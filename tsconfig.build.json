{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],                 // Include all source files for the library
    "exclude": ["node_modules", "dist"] // Exclude node_modules and output directory
}
  